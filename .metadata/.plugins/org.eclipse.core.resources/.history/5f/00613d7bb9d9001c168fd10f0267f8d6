package practice_project;
import java.util.*;
import java.util.spi.CalendarDataProvider;
public class DateAndTime {

	public static void main(String[] args) {
		Calendar obj = Calendar.getInstance();
		//Date date = obj.getTime();
		System.out.println("Date"+ obj.get(Calendar.DATE));
		System.out.println("Month"+"/" +obj.get(Calendar.MONTH));
		System.out.println("Year"+"/"+obj.get(Calendar.YEAR));
		System.out.println("Year"+"/"+obj.get(Calendar.HOUR));
		System.out.println("Year"+"/"+obj.get(Calendar.MINUTE));
		System.out.println("Year"+"/"+obj.get(Calendar.SECOND));
		
		System.out.println("Current Timeis :"+ obj.getTimeZone());
		
		System.out.println("Current Timeis :"+ obj.getCalendarType());
		
		

	}

}
